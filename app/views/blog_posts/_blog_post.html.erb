<div class="w-full rounded-lg bg-gray-200 flex flex-col group overflow-hidden">
  <!-- Contenedor de imagen -->
  <div class="w-full h-64">
    <% if blog_post.banner_image.attached? %>
      <%= image_tag blog_post.banner_image, class: "h-full w-full object-cover" %>
    <% else %>
      <%= image_tag "books.jpg", class: "h-full w-full object-cover" %>
    <% end %>
  </div>

  <!-- Contenedor de título -->
  <div class="w-full px-4 py-3">
    <h2 class="text-xl text-gray-900 font-semibold line-clamp-2">
      <%= blog_post.title %>
    </h2>
  </div>

  <!-- Contenedor del botón -->
  <div class="w-full px-4 pb-4 mt-auto">
    <%= link_to "Read post", blog_post, class: "inline-block px-4 py-2 rounded-lg bg-[#d7336d] text-white hover:opacity-90 transition-opacity" %>
  </div>
</div>
